{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "references": [{
    "path": "../hwa-ripple-address-codec/tsconfig.json"
  }],
  "include": ["src/**/*.ts"]
}
